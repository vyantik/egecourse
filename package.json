		"express-session": "^1.18.1",
		"ioredis": "^5.4.2",
		"multer": "^1.4.5-lts.2",
		"prisma": "^6.10.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"reflect-metadata": "^0.2.0",
		"resend": "^4.0.1",
		"rxjs": "^7.8.1",
		"sharp": "^0.33.5"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.0",
