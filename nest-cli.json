{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"builder": "swc",
		"typeCheck": true,
		"assets": [
			{
				"include": "libs/mail/templates/**/*",
				"outDir": "dist/libs/mail/templates",
				"watchAssets": true
			}
		],
		"watchAssets": true
	}
}
