generator client {
  provider = "prisma-client-js"
  output   = "./__generated__"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String

  surname    String
  name       String
  patronymic String

  picture String?

  role UserRole @default(REGULAR)

  isVerified         Boolean @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean @default(false) @map("is_two_factor_enabled")

  method AuthMethod

  reviews Review[]

  courses Course[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Token {
  id String @id @default(uuid())

  email     String
  token     String    @unique
  type      TokenType
  expiresIn DateTime  @map("expires_in")

  createdAt DateTime @default(now()) @map("created_at")

  @@index([email, type])
  @@map("tokens")
}

model Teacher {
  id String @id @default(uuid())

  name       String
  surname    String
  patronymic String

  category TeacherCategory

  picture String?

  experience String
  egeScore   Int
  direction  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("teachers")
}

model Faq {
  id String @id @default(uuid())

  question String
  answer   String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("faqs")
}

model Course {
  id String @id @default(uuid())

  name        String
  description String
  header      String

  studyFormat String @map("study_format")
  document    String
  studyStart  String @map("study_start")

  category CourseCategory @default(EXAM)

  users        User[]
  applications Application[]

  priceOptions Json? @map("price_options")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([studyFormat, studyStart])
  @@map("courses")
}

enum CourseCategory {
  EXAM
  EDUCATION
  RAINBOW
}

model Review {
  id String @id @default(uuid())

  text     String
  category ReviewCategory
  status   ReviewStatus   @default(PENDING)

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@map("reviews")
}

model UrlContainer {
  id String @id @default(uuid())

  key String @unique
  url String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("url_containers")
}

model Application {
  id String @id @default(uuid())

  name  String
  phone String

  category ApplicationCategory

  course   Course? @relation(fields: [courseId], references: [id])
  courseId String? @map("course_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([category, createdAt])
  @@map("applications")
}

model Webinar {
  id String @id @default(uuid())

  title       String
  description String
  date        DateTime

  status WebinarStatus @default(OPEN)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([date])
  @@map("webinars")
}

enum UserRole {
  REGULAR
  ADMIN
}

enum AuthMethod {
  CREDENTIALS
}

enum TokenType {
  VERIFICATION
  TWO_FACTOR
  PASSWORD_RESET
}

enum TeacherCategory {
  EXAM
  EDUCATION
  RAINBOW
}

enum ReviewCategory {
  EXAM
  EDUCATION
  RAINBOW
  OTHER
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ApplicationCategory {
  EXAM
  EDUCATION
  RAINBOW
}

enum WebinarStatus {
  OPEN
  CLOSED
}
