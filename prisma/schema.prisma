generator client {
  provider = "prisma-client-js"
  output   = "./__generated__"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String

  surname    String
  name       String
  patronymic String

  picture String?

  role UserRole @default(REGULAR)

  isVerified         Boolean @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean @default(false) @map("is_two_factor_enabled")

  method AuthMethod

  Review Review[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Token {
  id String @id @default(uuid())

  email     String
  token     String    @unique
  type      TokenType
  expiresIn DateTime  @map("expires_in")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("tokens")
}

model Teacher {
  id String @id @default(uuid())

  name       String
  surname    String
  patronymic String

  category TeacherCategory

  picture String?

  experience String
  egeScore   Int
  direction  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("teachers")
}

model Faq {
  id String @id @default(uuid())

  question String
  answer   String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("faqs")
}

model Course {
  id String @id @default(uuid())

  name        String
  description String
  header      String

  studyFormat String @map("study_format")
  document    String
  studyStart  String @map("study_start")

  priceOptions Json? @map("price_options")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("courses")
}

model Review {
  id String @id @default(uuid())

  text String

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("reviews")
}

model UrlContainer {
  id String @id @default(uuid())

  key String @unique
  url String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("url_containers")
}

model Application {
  id String @id @default(uuid())

  name     String
  phone    String
  category ApplicationCategory

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("applications")
}

enum UserRole {
  REGULAR
  ADMIN
}

enum AuthMethod {
  CREDENTIALS
}

enum TokenType {
  VERIFICATION
  TWO_FACTOR
  PASSWORD_RESET
}

enum TeacherCategory {
  EGE
  BEFORE_EGE
}

enum ApplicationCategory {
  EXAM_PREPARATION
  ADVANCED_TRAINING
  SUNDAY_SCHOOL
}
